<%- include("../partials/header") %> 

    <h1>Edit Your Info</h1>
    <div style="width: 30%; margin:25px auto; margin-left:0;" >
            <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input class="form-control" type="text" name="user[username]" value="<%= user.username %> " id="username">
                </div>
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>" id="firstName">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input class="form-control" type="text" name="user[lastName]" value="<%=user.lastName  %>" id="lastName">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input class="form-control" type="email" name="user[email]" value="<%=  user.email %>" id="email">
                </div>
                <div class="form-group">
                    <label for="avatar">Avatar:</label>
                    <input class="form-control" type="file" accept="image/*" name="avatar" id="avatar">
                    <em>*Enter if you wish to update, else leave blank</em>
                </div>
                <div class="form-group">
                        <button class="btn btn-success">Update</button>
                </div>
            </form>

            <a href="/forgot" class="btn btn-warning">Change Your Password</a>
        </div>



<%- include("../partials/footer") %> 