<%- include("../partials/header") %> 

<h1 style="text-align: center;">Edit CampGround</h1>

    <div class="row">
        <div style="width:30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %> " name="campground[name]">
                </div>
                <div class="form-group">
                        <input class="form-control" type="number" value=<%= campground.price %>  name="campground[price]" minvalue="0.01" step="0.01" >
                </div>
                <div class="form-group">
                    <label for="campImage">Campground Image:</label>
                        <input class="form-control" type="file" value=<%= campground.image %>  name="image" id="campImage" accept="image/*" >
                    <em>Enter if you wish to change, else it will remain the same</em>
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" value="<%= campground.description %> " name="campground[description]">
                    </div>
                <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back </a>

        </div>
    </div>
<%- include("../partials/footer") %> 